---
interface Props {
  headingLevel?: 1 | 2 | 3 | 4 | 5 | 6;
  uppercase?: boolean;
}

const {headingLevel = 1, uppercase = false} = Astro.props;

const Element = `h${headingLevel.toString()}`;
---

<Element class:list={[`heading-${headingLevel}`, uppercase ? 'uppercase' : '']}>
  <slot />
</Element>


<style lang="scss">
  @use '../scss/abstracts' as *;

  .heading-1{
    @include heading($fs-900, $font-weight-bold, $line-height-heading, $clr-neutral-900)
  }

  .heading-2{
    @include heading($fs-800, $font-weight-bold, $line-height-heading, $clr-neutral-900)
  }

  .heading-3{
    @include heading($fs-700, $font-weight-bold, $line-height-heading, $clr-neutral-900)
  }

  // add more heading styles here 
</style>